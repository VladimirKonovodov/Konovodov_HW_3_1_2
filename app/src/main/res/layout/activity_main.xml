<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button1"

        android:fontFamily="sans-serif"
        android:gravity="bottom"
        android:hint="@string/toCount"
        android:lines="3"
        android:maxLines="3"
        android:minLines="3"
        android:singleLine="false"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColorLink="#DA582F"
        android:textSize="30sp"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/button1"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button5"
android:layout_alignParentLeft="true"

        android:text="@string/clear" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button5"

        android:layout_toRightOf="@id/button1"

        android:text="@string/percent">

    </Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@id/button2"

        android:text="@string/del">

    </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@id/button3"

        android:layout_alignParentRight="true"


        android:text="@string/div">

    </Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button9"
        android:layout_alignParentLeft="true"



        android:text="@string/seven">
    </Button>
    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button9"

        android:layout_toRightOf="@id/button5"

        android:text="@string/eight">
    </Button>
    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button9"
        android:layout_toRightOf="@id/button6"

        android:text="@string/nine">
    </Button>
    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button9"

        android:layout_toRightOf="@id/button7"
        android:layout_alignParentRight="true"
        android:text="@string/mult">
    </Button>
    <Button
        android:id="@+id/button9"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button13"
        android:layout_alignParentLeft="true"

        android:text="@string/four">
    </Button>
    <Button
        android:id="@+id/button10"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button13"
        android:layout_toRightOf="@id/button9"

        android:text="@string/five">
    </Button>
    <Button
        android:id="@+id/button11"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button13"
        android:layout_toRightOf="@id/button10"

        android:text="@string/six">
    </Button>
    <Button
        android:id="@+id/button12"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button13"
        android:layout_toRightOf="@id/button11"
        android:layout_alignParentRight="true"
        android:text="@string/minus">
    </Button>
    <Button
        android:id="@+id/button13"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button17"
        android:layout_alignParentLeft="true"

        android:text="@string/one">
    </Button>
    <Button
        android:id="@+id/button14"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button17"
        android:layout_toRightOf="@id/button13"
        android:text="@string/two">
    </Button>
    <Button
        android:id="@+id/button15"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_above="@+id/button17"
        android:layout_toRightOf="@id/button14"
        android:text="@string/three">
    </Button>
    <Button
        android:id="@+id/button16"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"

        android:layout_above="@+id/button17"
        android:layout_toRightOf="@id/button15"
        android:layout_alignParentRight="true"
        android:text="@string/plus">
    </Button>
    <Button
        android:id="@+id/button17"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"

        android:layout_alignParentLeft="true"

        android:layout_alignParentBottom="true"
        android:text="@string/plusMinus">
    </Button>
    <Button
        android:id="@+id/button18"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"


        android:layout_toRightOf="@id/button17"
        android:layout_alignParentBottom="true"
        android:text="@string/zero">
    </Button>
    <Button
        android:id="@+id/button19"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"


        android:layout_toRightOf="@id/button18"
        android:layout_alignParentBottom="true"
        android:text="@string/dot">
    </Button>
    <Button
        android:id="@+id/button20"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"


        android:layout_toRightOf="@id/button19"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/result">
    </Button>






</RelativeLayout>
